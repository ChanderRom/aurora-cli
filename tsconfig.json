{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "target": "es2019",
        "baseUrl": "./",
        "paths": {
            "@cliter/*": ["src/@cliter/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/templates/**/*"
    ]
}
